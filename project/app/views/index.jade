extends layout

block content
  .main.container
    .row
      button(onclick="predict()") Go to Predict
      button(onclick="about()") Go to About
    .row
      h1= title
      p Welcome to #{title}
      .image-block
        img.className#IdName(src="/images/1.gif" alt="Index page image here")

    script.
      function predict() {
        window.location.href = '/predict'
      }
      function about() {
        window.location.href = '/about'
      }
